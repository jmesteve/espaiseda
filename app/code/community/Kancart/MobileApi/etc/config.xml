<?xml version="1.0"?>
<config>
    <modules>
        <Kancart_MobileApi>
            <version>0.1.0</version>
        </Kancart_MobileApi>
    </modules>
    <frontend>
        <routers>
            <MobileApi>
                <use>standard</use>
                <args>
                    <module>Kancart_MobileApi</module>
                    <frontName>mobileapi</frontName>
                </args>
            </MobileApi>
        </routers>
    </frontend>
    <global>
        <models>
            <mobileapi>
                <class>Kancart_MobileApi_Model</class>
            </mobileapi>
        </models>
        <helpers>
            <mobileapi>
                <class>Kancart_MobileApi_Helper</class>
            </mobileapi>
        </helpers>
    </global>
    <default>
        <Kancart>
            <Kancart_group>
                <Kancart_appkey>KANCART_APP_KEY</Kancart_appkey>
                <Kancart_appsecrect>KANCART_APP_SECRET</Kancart_appsecrect>
            </Kancart_group>
        </Kancart>
    </default>
</config>
